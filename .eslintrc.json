{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": [1,140,2],
        "indent": ["error", 2],
        "no-console":["error"],
        "quotes": ["error", "single", {"avoidEscape":true}],
        "object-curly-spacing": ["error", "always"]
    }
}
